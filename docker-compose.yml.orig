version: "3.2"
services:
  php:
    build: 
      context: './'
      dockerfile: /home/albert/projects/ChurchApp/Dockerfile-php2
      ## args:
      ##  PHP_VERSION: ${PHP_VERSION}
    networks:
      - backend
    volumes:
      - ./api/:/var/www/html/
    container_name: tpac_api
  apache:
    build:
      context: './apache/'
      args:
       APACHE_VERSION: ${APACHE_VERSION}
    depends_on:
      - php 
      - tpac_db 
    networks:
      - frontend
      - backend
    ports:
      - "9001:80"
    volumes:
      - ./api/:/var/www/html/
    container_name: tpac_apache
  tpac_admin:
    build:
      context: './admin/'
    networks:
      - frontend
    ports:
      - "9002:8080"
    container_name: tpac_admin
  tpac_db:
    image: mysql:${MYSQL_VERSION:-latest}
    networks:
      - backend
    environment:
      - MYSQL_ROOT_PASSWORD=rootpassword
    container_name: tpac_db 
    volumes:
      - ./mysql.cnf:/etc/mysql/conf.d/mysql.cnf
      - ./db:/docker-entrypoint-initdb.d
      - dbdata:/var/lib/mysql
  phpmyadmin:
    image: phpmyadmin
    restart: always
    networks:
      - backend
    ports:
      - 9080:80
    environment:
      - PMA_ARBITRARY=1



networks:
  frontend:
  backend:
volumes:
  dbdata:
